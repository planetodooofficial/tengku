<odoo>

    <!--tree view-->
    <record id="res_city_tree" model="ir.ui.view">
        <field name="name">res.city.tree</field>
        <field name="model">res.city</field>
        <field name="arch" type="xml">
            <tree editable="bottom">

                <field name="name"/>
                <field name="state_id"/>

            </tree>
        </field>
    </record>


    <!--Action Window-->

    <record id="res_city_action" model="ir.actions.act_window">
        <field name="name">City</field>
        <field name="res_model">res.city</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="oe_view_non_content_create">
                Please enter City Records!</p>
        </field>
    </record>

    <menuitem id="res_city_menu" name="City" action="res_city_action" parent="contacts.menu_country_state_partner"/>



</odoo>
